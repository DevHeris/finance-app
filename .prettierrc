{
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": "*.component.html",
            "options": {
                "parser": "angular",
                "singleQuote": false
            }
        },
        {
            "files": "*.scss",
            "options": {
                "singleQuote": true
            }
        }
    ]
}
